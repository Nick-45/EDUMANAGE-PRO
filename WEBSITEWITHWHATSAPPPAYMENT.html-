            </div>
            
            <div class="footer-links-section">
                <h3 class="footer-heading">Packages</h3>
                <ul class="footer-links">
                    <li class="footer-link"><a href="#pricing"><i class="fas fa-chevron-right"></i> Small School (0-100)</a></li>
                    <li class="footer-link"><a href="#pricing"><i class="fas fa-chevron-right"></i> Medium School (100-500)</a></li>
                    <li class="footer-link"><a href="#pricing"><i class="fas fa-chevron-right"></i> One-Time Purchase</a></li>
                    <li class="footer-link"><a href="#pricing"><i class="fas fa-chevron-right"></i> Custom Enterprise</a></li>
                </ul>
            </div>
            
            <div class="footer-contact">
                <h3 class="footer-heading">Contact Us</h3>
                <ul class="footer-links">
                    <li class="footer-link">
                        <a href="#"><i class="fas fa-map-marker-alt"></i> Nairobi, Kenya</a>
                    </li>
                    <li class="footer-link">
                        <a href="mailto:info@edumanagepro.com"><i class="fas fa-envelope"></i> info@edumanagepro.com</a>
                    </li>
                    <li class="footer-link">
                        <a href="tel:+254114963959"><i class="fab fa-whatsapp"></i> +254 114 963 959</a>
                    </li>
                </ul>
            </div>
        </div>
        
        <div class="footer-bottom">
            <p>&copy; 2024 EduManage Pro. All rights reserved. | Designed with <i class="fas fa-heart" style="color: #ff4757;"></i> for education</p>
        </div>
    </footer>

    <script>
        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            // Create particles background
            createParticles();
            
            // Initialize animations
            initAnimations();
            
            // Initialize testimonial slider
            initTestimonialSlider();
            
            // Initialize counter animation
            initCounters();
            
            // Setup scroll events
            setupScrollEvents();
            
            // Setup navbar scroll effect
            setupNavbar();
            
            // Setup modal functionality
            setupModal();
        });

        // Create animated particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            const particleCount = 50;
            
            for (let i = 0; i < particleCount; i++) {
                const particle = document.createElement('div');
                particle.classList.add('particle');
                
                // Random size between 5px and 20px
                const size = Math.random() * 15 + 5;
                particle.style.width = `${size}px`;
                particle.style.height = `${size}px`;
                
                // Random position
                particle.style.left = `${Math.random() * 100}%`;
                particle.style.top = `${Math.random() * 100}%`;
                
                // Random animation delay and duration
                const delay = Math.random() * 10;
                const duration = Math.random() * 20 + 10;
                particle.style.animationDelay = `${delay}s`;
                particle.style.animationDuration = `${duration}s`;
                
                // Random color variation
                const hue = 120 + Math.random() * 40; // Green hue range
                particle.style.backgroundColor = `hsl(${hue}, 70%, 60%)`;
                
                particlesContainer.appendChild(particle);
            }
        }

        // Initialize scroll animations
        function initAnimations() {
            const revealElements = document.querySelectorAll('.reveal');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('active');
                        
                        // If element has data-target for counter, start counting
                        if (entry.target.classList.contains('stat-number')) {
                            animateCounter(entry.target);
                        }
                    }
                });
            }, {
                threshold: 0.1,
                rootMargin: '0px 0px -50px 0px'
            });
            
            revealElements.forEach(el => observer.observe(el));
        }

        // Animate number counters
        function animateCounter(element) {
            const target = parseInt(element.getAttribute('data-target'));
            const duration = 2000; // 2 seconds
            const step = target / (duration / 16); // 60fps
            let current = 0;
            
            const timer = setInterval(() => {
                current += step;
                if (current >= target) {
                    element.textContent = target;
                    clearInterval(timer);
                } else {
                    element.textContent = Math.floor(current);
                }
            }, 16);
        }

        // Initialize all counters
        function initCounters() {
            const counters = document.querySelectorAll('.stat-number');
            counters.forEach(counter => {
                counter.textContent = '0';
            });
        }

        // Testimonial slider
        let currentSlide = 0;
        const slides = document.querySelectorAll('.testimonial-card');
        const track = document.getElementById('testimonialTrack');

        function initTestimonialSlider() {
            updateSlider();
            
            // Auto slide every 5 seconds
            setInterval(() => {
                nextTestimonial();
            }, 5000);
        }

        function nextTestimonial() {
            currentSlide = (currentSlide + 1) % slides.length;
            updateSlider();
        }

        function prevTestimonial() {
            currentSlide = (currentSlide - 1 + slides.length) % slides.length;
            updateSlider();
        }

        function updateSlider() {
            track.style.transform = `translateX(-${currentSlide * 100}%)`;
        }

        // Navbar scroll effect
        function setupNavbar() {
            const navbar = document.getElementById('navbar');
            
            window.addEventListener('scroll', () => {
                if (window.scrollY > 50) {
                    navbar.classList.add('scrolled');
                } else {
                    navbar.classList.remove('scrolled');
                }
            });
        }

        // Setup scroll events for smooth navigation
        function setupScrollEvents() {
            // Smooth scroll for anchor links
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function(e) {
                    const targetId = this.getAttribute('href');
                    if (targetId === '#') return;
                    
                    const targetElement = document.querySelector(targetId);
                    if (targetElement) {
                        e.preventDefault();
                        window.scrollTo({
                            top: targetElement.offsetTop - 80,
                            behavior: 'smooth'
                        });
                    }
                });
            });
        }

        // Setup modal functionality
        function setupModal() {
            const modal = document.getElementById('orderModal');
            const closeModalBtn = document.getElementById('closeModal');
            const orderForm = document.getElementById('orderForm');
            
            // Close modal when clicking outside
            modal.addEventListener('click', function(e) {
                if (e.target === modal) {
                    closeOrderModal();
                }
            });
            
            // Close modal with button
            closeModalBtn.addEventListener('click', closeOrderModal);
            
            // Close with Escape key
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape' && modal.classList.contains('active')) {
                    closeOrderModal();
                }
            });
            
            // Handle form submission
            orderForm.addEventListener('submit', function(e) {
                e.preventDefault();
                processOrder();
            });
        }

        // Package selection function
        let selectedPackage = {
            id: 'small',
            title: 'Small School Package',
            description: 'Ksh. 1,500 per term for schools with 0-100 students',
            price: '1500',
            type: 'per term'
        };

        function selectPackage(packageId, title, description, price, type) {
            // Store selected package
            selectedPackage = {
                id: packageId,
                title: title,
                description: description,
                price: price,
                type: type
            };
            
            // Update form fields
            document.getElementById('selectedPackage').value = packageId;
            document.getElementById('selectedPackageTitle').textContent = title;
            document.getElementById('selectedPackageDescription').textContent = description;
            document.getElementById('packagePrice').value = price;
            document.getElementById('packageType').value = type;
            
            // Auto-select student count based on package
            const studentCountSelect = document.getElementById('studentCount');
            if (packageId === 'small') {
                studentCountSelect.value = '0-100';
            } else if (packageId === 'medium') {
                studentCountSelect.value = '100-500';
            } else if (packageId === 'lifetime') {
                studentCountSelect.value = '500+';
            }
            
            // Show modal
            openOrderModal();
        }

        function openOrderModal() {
            const modal = document.getElementById('orderModal');
            modal.classList.add('active');
            document.body.style.overflow = 'hidden'; // Prevent scrolling
        }

        function closeOrderModal() {
            const modal = document.getElementById('orderModal');
            modal.classList.remove('active');
            document.body.style.overflow = ''; // Restore scrolling
        }

        // Process order and redirect to WhatsApp
        function processOrder() {
            const name = document.getElementById('clientName').value;
            const school = document.getElementById('schoolName').value;
            const email = document.getElementById('clientEmail').value;
            const phone = document.getElementById('clientPhone').value;
            const studentCount = document.getElementById('studentCount').value;
            
            // Validate phone number (Kenyan format)
            const phoneRegex = /^(\+254|0)[17]\d{8}$/;
            if (!phoneRegex.test(phone.replace(/\s/g, ''))) {
                alert('Please enter a valid Kenyan phone number (e.g., +2547XXXXXXXX or 07XXXXXXXX)');
                return;
            }
            
            // Format phone number for WhatsApp
            let formattedPhone = phone.replace(/\s/g, '');
            if (formattedPhone.startsWith('0')) {
                formattedPhone = '+254' + formattedPhone.substring(1);
            } else if (!formattedPhone.startsWith('+')) {
                formattedPhone = '+' + formattedPhone;
            }
            
            // Create WhatsApp message
            const message = `*NEW ORDER - EduManage Pro*%0A%0A` +
                           `*Client Details:*%0A` +
                           `Name: ${name}%0A` +
                           `School: ${school}%0A` +
                           `Email: ${email}%0A` +
                           `Phone: ${phone}%0A` +
                           `Student Count: ${studentCount}%0A%0A` +
                           `*Selected Package:*%0A` +
                           `${selectedPackage.title}%0A` +
                           `${selectedPackage.description}%0A` +
                           `Price: Ksh. ${selectedPackage.price} ${selectedPackage.type}%0A%0A` +
                           `*Order Date:* ${new Date().toLocaleDateString()}`;
            
            // WhatsApp URL
            const whatsappUrl = `https://wa.me/254114963959?text=${message}`;
            
            // Open WhatsApp in new tab
            window.open(whatsappUrl, '_blank');
            
            // Show confirmation
            alert('Order submitted! You are being redirected to WhatsApp to complete your order. Our team will contact you within 24 hours.');
            
            // Reset form and close modal
            document.getElementById('orderForm').reset();
            closeOrderModal();
            
            // Track order (you could send to Google Analytics or other tracking here)
            console.log('Order submitted:', {
                name,
                school,
                email,
                phone,
                studentCount,
                package: selectedPackage
            });
        }

        // Redirect to login page
        function redirectToLogin() {
            // In production, this would redirect to the actual login page
            alert('Redirecting to login page...\n\nIn the full implementation, this would navigate to the login system.');
            // window.location.href = 'login.html';
        }

        // Scroll to pricing section
        function scrollToPricing() {
            const pricingSection = document.getElementById('pricing');
            window.scrollTo({
                top: pricingSection.offsetTop - 80,
                behavior: 'smooth'
            });
        }

        // Add some interactive animations
        document.querySelectorAll('.feature-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-15px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });

        // Add floating animation to dashboard items
        document.querySelectorAll('.dashboard-item').forEach((item, index) => {
            // Random animation delay
            item.style.animationDelay = `${index * 0.1}s`;
            
            // Add hover effect
            item.addEventListener('mouseenter', function() {
                this.style.transform = 'scale(1.1)';
                this.style.backgroundColor = '#4CAF50';
            });
            
            item.addEventListener('mouseleave', function() {
                this.style.transform = 'scale(1)';
                this.style.backgroundColor = '#F8F9FA';
            });
        });

        // Add typing effect to hero title (optional)
        const heroTitle = document.querySelector('.hero-title');
        const originalText = heroTitle.textContent;
        heroTitle.textContent = '';
        
        let charIndex = 0;
        function typeWriter() {
            if (charIndex < originalText.length) {
                heroTitle.textContent += originalText.charAt(charIndex);
                charIndex++;
                setTimeout(typeWriter, 50);
            }
        }
        
        // Start typing after page loads
        setTimeout(typeWriter, 500);

        // Add confetti effect on CTA button click
        document.querySelector('.cta-button').addEventListener('click', function(e) {
            createConfetti();
        });

        // Add confetti effect on package selection
        document.querySelectorAll('.pricing-button').forEach(button => {
            button.addEventListener('click', function(e) {
                createConfetti();
            });
        });

        function createConfetti() {
            const colors = ['#4CAF50', '#2E7D32', '#FFD700', '#FFC107', '#FFFFFF'];
            const confettiCount = 100;
            
            for (let i = 0; i < confettiCount; i++) {
                const confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.position = 'fixed';
                confetti.style.width = '10px';
                confetti.style.height = '10px';
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                confetti.style.borderRadius = Math.random() > 0.5 ? '50%' : '0';
                confetti.style.left = `${Math.random() * 100}vw`;
                confetti.style.top = '-20px';
                confetti.style.zIndex = '9999';
                confetti.style.opacity = '0.8';
                
                document.body.appendChild(confetti);
                
                // Animate confetti
                const animation = confetti.animate([
                    { transform: 'translateY(0) rotate(0deg)', opacity: 1 },
                    { transform: `translateY(${window.innerHeight}px) rotate(${Math.random() * 720}deg)`, opacity: 0 }
                ], {
                    duration: Math.random() * 2000 + 1000,
                    easing: 'cubic-bezier(0.215, 0.61, 0.355, 1)'
                });
                
                animation.onfinish = () => confetti.remove();
            }
        }
    </script>
</body>
