        .slider-btn:hover {
            background: var(--light-green);
            color: var(--white);
            transform: scale(1.1);
        }

        /* CTA Section */
        .cta-section {
            padding: 8rem 5%;
            background: var(--gradient-green);
            color: var(--white);
            text-align: center;
            position: relative;
            overflow: hidden;
        }

